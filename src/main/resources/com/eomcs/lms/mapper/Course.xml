<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.keep.root.dao.CoursePlaceDao">

  <resultMap type="CoursePlace" id="CoursePlaceMap">
    <id column="place_no"   property="no"/>
    <result column="place_name"  property="placeName"/>
    <result column="place_basic_address"  property="basicAddr"/>
    <result column="place_detail_address"  property="detailAddr"/>
    <result column="etc"  property="etc"/>
    
    <association property="courseDay" javaType="CourseDay">
    <!-- 
      <id column="lesson_id"   property="no"/>
      <result column="lesson_titl"  property="title"/>
       -->
    </association>
    
  </resultMap>
    
  <insert id="insert" parameterType="CoursePlace"
   useGeneratedKeys="true" keyColumn="place_no" keyProperty="no">
    insert into course_place(
    place_name,
    place_basic_address,
    place_detail_address,
    etc
    ) 
    values
    <foreach collection="files" item="file" separator=",">
      (#{no}, #{file.filepath})
    </foreach>
  </insert>
  
  <select id="findAll" resultMap="PhotoFileMap" parameterType="int">
    select 
      photo_file_id, 
      photo_id, 
      file_path
    from 
      lms_photo_file
    where 
      photo_id=#{boardNo}
    order by 
      photo_file_id asc
  </select>

  <delete id="deleteAll" parameterType="int">
    delete from lms_photo_file
    where photo_id=#{boardNo}
  </delete>
</mapper>







